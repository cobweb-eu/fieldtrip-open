{
    "header": {
        "buttons" : {
            "settings": {
                "platforms": ["desktop"],
                "id": "home-settings",
                "href": "settings.html",
                "data-inline": "true",
                "data-transition": "none",
                "class": "ui-btn ui-btn-a ui-corner-all ui-shadow",
                "value": "Settings"
            },
            "exit": {
                "platforms": ["android"],
                "id": "home-exit",
                "class": "ui-btn ui-btn-a ui-corner-all ui-shadow",
                "value": "Exit"
            }
        }
    },
    "body": {
        "section1": {
            "title": {
                "i18n": "index:section_maps",
                "en": "Maps"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"href": "map.html"},
                    "img": {"src": "css/images/online.png", "alt": "View Map"},
                    "i18n": "index:online",
                    "title": "Online"
                }
            }
        },
        "section2": {
            "title": {
                "i18n": "index:section_capture",
                "en": "Capture"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"class": "annotate-image-form", "href": "#"},
                    "img": {"src": "css/images/images.png", "alt": "Capture Image"},
                    "i18n": "index:images",
                    "title": "Images"
                },
                "item2": {
                    "div": {"class": "ui-block-b"},
                    "a": {"class": "annotate-audio-form", "href": "#"},
                    "img": {"src": "css/images/audio.png", "alt": "Capture Audio"},
                    "i18n": "index:audio",
                    "title": "Audio"
                },
                "item3": {
                    "div": {"class": "ui-block-c"},
                    "a": {"class": "annotate-text-form", "href": "#"},
                    "img": {"src": "css/images/text.png", "alt": "Capture Text"},
                    "i18n": "index:text",
                    "title": "Text"
                }
            }
        },
        "section3": {
            "title": {
                "i18n": "index:section_records",
                "en": "Records"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"href": "saved-records.html"},
                    "img": {"src": "css/images/documents.png", "alt": "Saved Records"},
                    "i18n": "index:records",
                    "title": "Records"
                }
            }
        },
        "section4": {
            "title": {
                "i18n": "index:section_development",
                "en": "Development"
            },
            "items": {
                "item1": {
                    "div": {
                        "class": "ui-block-a"
                    },
                    "a": {"href": "settings.html"},
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Settings"
                    },
                    "i18n": "index:settings",
                    "title": "Settings"
                },
                "item2": {
                    "div": {
                        "id": "home-unit-test-but",
                        "class": "ui-block-b"
                    },
                    "a": {
                        "href": "#",
                        "class": "test-page-but"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Tests"
                    },
                    "i18n": "index:unit_tests",
                    "title": "Unit Tests"
                },
                "item3": {
                    "div": {
                        "class": "ui-block-c"
                    },
                    "a": {
                        "href": "#",
                        "class": "test-page-but"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "System Tests"
                    },
                    "i18n": "index:system_tests",
                    "title": "System Tests"
                },
                "item4": {
                    "div": {
                        "class": "ui-block-d"
                    },
                    "a": {
                        "id": "test-create-records-but",
                        "href": "#"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Misc Test"
                    },
                    "i18n": "index:create_records",
                    "title": "Create Records"
                }
            }
        }
    },
