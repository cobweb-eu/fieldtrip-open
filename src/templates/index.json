{
    "header": {
        "buttons" : {
            "settings": {
                "platforms": ["desktop"],
                "id": "home-settings",
                "href": "settings.html",
                "data-inline": "true",
                "data-transition": "none",
                "class": "ui-btn ui-btn-a ui-corner-all ui-shadow",
                "value": "Settings"
            },
            "exit": {
                "platforms": ["android"],
                "id": "home-exit",
                "class": "ui-btn ui-btn-a ui-corner-all ui-shadow",
                "value": "Exit"
            }
        }
    },
    "body": {
        "section1": {
            "title": {
                "i18n": "section1.title",
                "en": "Maps"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"href": "map.html"},
                    "img": {"src": "css/images/online.png", "alt": "View Map"},
                    "title": "Online"
                }
            }
        },
        "section2": {
            "title": {
                "i18n": "section2.title",
                "en": "Capture"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"class": "annotate-image-form", "href": "#"},
                    "img": {"src": "css/images/images.png", "alt": "Capture Image"},
                    "title": "Images"
                },
                "item2": {
                    "div": {"class": "ui-block-b"},
                    "a": {"class": "annotate-audio-form", "href": "#"},
                    "img": {"src": "css/images/audio.png", "alt": "Capture Audio"},
                    "title": "Audio"
                },
                "item3": {
                    "div": {"class": "ui-block-c"},
                    "a": {"class": "annotate-text-form", "href": "#"},
                    "img": {"src": "css/images/text.png", "alt": "Capture Text"},
                    "title": "Text"
                }
            }
        },
        "section3": {
            "title": {
                "i18n": "section3.title",
                "en": "Records"
            },
            "items": {
                "item1": {
                    "div": {"class": "ui-block-a"},
                    "a": {"href": "saved-records.html"},
                    "img": {"src": "css/images/documents.png", "alt": "Saved Records"},
                    "title": "Records"
                }
            }
        },
        "section4": {
            "title": {
                "i18n": "section4.title",
                "en": "Development"
            },
            "items": {
                "item1": {
                    "div": {
                        "class": "ui-block-a"
                    },
                    "a": {"href": "settings.html"},
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Settings"
                    },
                    "title": "Settings"
                },
                "item2": {
                    "div": {
                        "id": "home-unit-test-but",
                        "class": "ui-block-b"
                    },
                    "a": {
                        "href": "#",
                        "class": "test-page-but"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Tests"
                    },
                    "title": "Unit Tests"
                },
                "item3": {
                    "div": {
                        "class": "ui-block-c"
                    },
                    "a": {
                        "href": "#",
                        "class": "test-page-but"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "System Tests"
                    },
                    "title": "System Tests"
                },
                "item4": {
                    "div": {
                        "class": "ui-block-d"
                    },
                    "a": {
                        "id": "test-create-records-but",
                        "href": "#"
                    },
                    "img": {
                        "src": "css/images/settings.png",
                        "alt": "Misc Test"
                    },
                    "title": "Create Records"
                }
            }
        }
